SRCFILES=	ft_printf.c				\
			ft_strlen.c				\
			ft_putchar_fd.c			\
			ft_putstr_fd.c			\
			ft_putnbr_fd.c			\
			ft_putnbr_hex.c			\
			ft_putnbr_unsigned.c	\
			if_p.c


HEADFILES=	ft_printf.h

OBJFILES=	${SRCFILES:.c=.o}

NAME=		libftprintf.a

CC=			gcc

CFLAGS=		-Wall -Wextra -Werror

%.o:		%.c ${HEADFILES}
			${CC} ${CFLAGS} -c $<

${NAME}:	${OBJFILES} ${HEADFILES}
		ar rcs ${NAME} ${OBJFILES}

all:		${NAME}

clean:
			rm -f ${OBJFILES}

fclean:		clean
			rm -f ${NAME}

re:			fclean all

.PHONY:		clean

shrek:
	@tput setaf 2
